#!/bin/sh
change_password () {
	if [ "$1" != "" ]; then
		echo "change [$2] password to '$1'"
		echo -e "$1\n$1" | /usr/bin/passwd user > /dev/null 2> /dev/null
	fi
}

usage () {
	echo "password [newpassword]"
	exit 1
}

# main ##########################################################

[ -z "$2" ] && usage;

change_password "$1" "$2"

exit 1
